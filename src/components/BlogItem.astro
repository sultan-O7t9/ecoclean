<a href={href}>

    <div data-aos="fade-up" data-aos-duration="800" class={twMerge("space-y-4 cursor-pointer bg-white relative z-10 card border-0")}>
        <img src={image} alt={title} class="h-[63%] w-full object-cover"/>
        <div class="flex flex-col items-start">
            <h6 class="mt-3 py-[6px] uppercase inline-block px-6 text-white text-lg bg-[#2986C7]">
                {type}
            </h6>
            <h2 class="mt-6 text-3xl md:text-3xl text-[#1D6292] font-degular-medium mb-3">{title}</h2>
            <p class="font-degular-medium">{description}</p>
            <a class="uppercase mt-6 text-lg text-[#2986C7] font-degular-medium flex items-center" href={href} >Read More <img src="/images/forward-icon.png" /></a>
            <slot/>
        </div>
    </div>
</a>
