>
  <!-- Hero Section -->
  <main
    class="px-4 pb-4 space-y-2 md:h-[100vh] bg-[url('/images/bg.jpg')] bg-cover bg-no-repeat flex flex-wrap items-start"
  >
    <Nav />
    <div class="grid sm:grid-cols-5 self-start">
      <div 
